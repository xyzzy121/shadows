entity = {
	name = "wormseed_planet_01_stage_1_entity"	
	pdxmesh = "planet_clouded_mesh"
	
	meshsettings = {
		name = "atmosphere_geosphereShape"
		index = 0
		shader = "PdxMeshAtmosphere"
	}
	
	meshsettings = {
		name = "planet_geosphereShape"
		texture_diffuse = "wormseed_planet_01_stage_1_diffuse.dds"
		texture_normal = "wormseed_planet_01_stage_1_normal.dds"
		texture_specular = "wormseed_planet_01_stage_1_specular.dds"
		shader = "PdxMeshPlanetEmissive"
	}
	
	meshsettings = {
		name = "clouds_geosphereShape"
		texture_diffuse = "clouds_thin_diffuse.dds"
		texture_normal = "clouds_thin_normal.dds"
		texture_specular = "clouds_thin_specular.dds"
		shader = "PdxMeshClouds"
	}
	
	meshsettings = {
		name = "clouds_shadow_geosphereShape"
		texture_diffuse = "clouds_thin_shadow_diffuse.dds"
		texture_normal = "nonormal.dds"
		texture_specular = "nospec.dds"
		shader = "PdxMeshClouds"
	}
	
	default_state = "idle"
	state = { name = "idle" animation = "idle" time_offset = { 0 100 }
		start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class" } }
		start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class_02" } }
	}
	
}


